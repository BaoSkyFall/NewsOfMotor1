                <!-- Begin Page Content -->

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800 ml-5">Write new post</h1>
                <form name="form1" method="POST" action="/admin/add-post">
                    <div class="input-group mb-3 ml-5 w-25">
                        <select class="custom-select" name="IDCategory" id="inputGroupSelect02">
                            <option selected>Choose Category</option>
                            <option value="1">Supercars</option>
                            <option value="2">Humor</option>
                            <option value="3">Motor</option>
                            <option value="4">Modern</option>


                        </select>
                        <div class="input-group-append">
                            <label class="input-group-text bg-gradient-primary text-light" for="inputGroupSelect02">Category</label>
                        </div>
                    </div>

                    <div class="input-group mb-3 ml-5 w-25">
                        <select class="custom-select" name="IDKind" id="inputGroupSelect02">
                            <option selected>Choose Kinds</option>
                            <% for(var i=0;i< data_kinds.length;i++) {%>
                                <option value="<%=data_kinds[i].IDKind %>">
                                    <%=data_kinds[i].Ten %>
                                </option>




                                <% }%>


                        </select>
                        <div class="input-group-append">
                            <label class="input-group-text bg-gradient-warning text-light" for="inputGroupSelect02">Kinds</label>
                        </div>
                    </div>

                    <input type="number" class="form-control d-none font-weight-bold" value="<%=userinfomation[0].ID %>" name="IDTacGia" id="inputAddress"
                        placeholder="Author is User">



                    <div class=" form-group ml-5 w-50 mt-3">

                        <label for="inputTitle">Title: </label>


                        <input type="text" class="form-control font-weight-bold" value="" name="title" id="inputAddress" placeholder="Best Car Evers - One Direction">


                    </div>
                    <div class=" form-group ml-5 w-50 mt-3">

                        <label for="inputTitle">Subtitle: </label>


                        <input type="text" class="form-control font-weight-bold" value="" name="subtitle" id="inputAddress" placeholder="Your Subtitle">


                    </div>
                    <div class=" form-group ml-5 w-50 mt-3">

                        <label for="inputTitle">Link image: </label>


                        <input type="text" class="form-control font-weight-bold" name="img" value="" id="inputAddress" placeholder="Your link image">


                    </div>
                    <div class=" form-group ml-5 w-50 mt-3">

                        <label for="inputTitle">Link Source: </label>


                        <input type="text" class="form-control font-weight-bold" name="linkSrc" value="" id="inputAddress" placeholder="Your link source">


                    </div>
                    <input class="d-none" type="number" name="_views" value="1">
                    <input class="d-none" type="date" name="NgayViet" id="input_NgayViet" value="">
                    <input class="d-none" type="date" name="NgayDang" id="input_NgayViet" value="2019-06-18">
                    <input class="d-none" type="number" name="isAvailable" id="isAvailable" value="0">

                    <!-- /.container-fluid -->
                    <div class="row d-flex justify-content-center">
                        <textarea name="NoiDung" id="editor1">&lt;p&gt;Blow your mind&lt;/p&gt;</textarea>
                        <script>
                            CKEDITOR.replace('editor1');
                            CKEDITOR.config.width = "93%";
                            CKEDITOR.config.height = 850;



                        </script>


                    </div>
                    <div class="d-flex justify-content-start w-100 mt-3 ml-4">
                        <button type="submit" id="btn-submit" class=" btn btn-warning  btn-icon-split">
                            <span class="icon text-white  ">
                                <i class="fa fa-rocket"></i>
                            </span>
                            <span type="submit" class="text">Submit your post</span>
                        </button>
                    </div>
                </form>

