          </a>
          <a href="#" class="btn btn-danger btn-icon-split mr-4">
            <span class="icon text-white  ">
              <i class="fa fa-trash"></i>
            </span>
            <span class="text">Delete Many Posts</span>
          </a>
          <a href="#" class="btn btn-success btn-icon-split mr-4">
            <span class="icon text-white  ">
              <i class="fa fa-rocket"></i>
            </span>
            <span class="text">Publish Many Posts</span>
          </a>
          <a href="#" class="btn btn-warning btn-icon-split">
            <span class="icon text-white  ">
              <i class="fa fa-check"></i>
            </span>
            <span class="text">Approved Many Posts</span>
          </a>
          <!-- DataTales Users -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Data Posts</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th></th>
                      <th></th>
                      <th>Title</th>
                      <th>Subtitle</th>
                      <th>Category</th>
                      <th>Kind</th>

                      <th>Writing Date</th>
                      <th>Publish Date</th>
                      <th>Status</th>
                      <th>Actions </th>

                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th></th>
                      <th></th>
                      <th>Title</th>
                      <th>Subtitle</th>
                      <th>Category</th>
                      <th>Kind</th>

                      <th>Writing Date</th>
                      <th>Publish Date</th>

                      <th>Status</th>
                      <th>Actions </th>

                    </tr>
                  </tfoot>
                  <tbody>
                      <% for(var i=0;i < data_posts.length ;i++) { %>

                      <tr style="font-size: 12px">
                        <td>
                          <input type="checkbox" data-id="<%=data_posts[i].ID %>">
                        </td>
                        <td>
                          <img src="<%=data_posts[i].img %>" width="1550px" class="img-fluid" alt="">
                        </td>
                        <td class="font-weight-bold" style="font-size: 15px">
                  
                          <%=data_posts[i].title %>
                        </td>
                        <td >
                       
                          <%=data_posts[i].subtitle %>
                    
                        </td>
                        <td>
                          <%=data_posts[i].TenLoai %>
                        </td>
                        <td>
                            <%=data_posts[i].kind %>
                            </td>
                            <td>
                                <%=data_posts[i].NgayViet.substring(0,10) %>
                                </td>
                                <td>
                                    <%=data_posts[i].NgayDang.substring(0,10) %>
                                    </td>
                                    <td>
                                        <% if(data_posts[i].IsAvailable == 1) {%>
                                          Published

                                          <% }%>
                                          <% if(data_posts[i].IsAvailable == 0) {%>
                                            Wait to be published
  
                                            <% }%>
                                        </td>
                                        
                                            <td>
                                                <button class="btn btn-primary" data-id="<%=data_posts[i].ID %>">Edit</button>
                                                <button class="btn btn-danger" data-id="<%=data_posts[i].ID %>">Delete</button>
                                              </td>
                                    
                      </tr>

                      <% }%>
                  </tbody>
                </table>
              </div>
            </div>
